<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <!-- Foto de Perfil -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_image"
        android:contentDescription="Foto de perfil"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:elevation="4dp" />

    <!-- Nome do Usuário -->
    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Usuário"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:paddingTop="12dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Descrição -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breve descrição do usuário."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/nameText"
        android:layout_centerHorizontal="true"
        android:paddingTop="8dp"
        android:fontFamily="sans-serif-light" />

    <!-- Emprego Atual -->
    <TextView
        android:id="@+id/currentJobText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emprego Atual: Desenvolvedor Android"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/descriptionText"
        android:layout_centerHorizontal="true"
        android:paddingTop="12dp"
        android:fontFamily="sans-serif-light" />

    <!-- Experiências -->
    <LinearLayout
        android:id="@+id/experienceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/currentJobText"
        android:background="@drawable/rounded_card_background"
        android:layout_marginTop="24dp"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiências Anteriores"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="8dp" />

        <!-- Conteúdo adicional pode ser inserido aqui -->
    </LinearLayout>
</RelativeLayout>
